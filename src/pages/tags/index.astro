---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// 从所有集合中收集 ingredientTags
const principles = await getCollection("principles");
const recipes = await getCollection("recipes");
const debugging = await getCollection("debugging");

// 统计每个标签出现的次数
const tagCount = new Map<string, number>();

for (const entry of [...principles, ...recipes, ...debugging]) {
  const tags = entry.data.ingredientTags ?? [];
  for (const tag of tags) {
    tagCount.set(tag, (tagCount.get(tag) ?? 0) + 1);
  }
}

// 按出现次数排序
const sortedTags = [...tagCount.entries()].sort((a, b) => b[1] - a[1]);

// 定义标签分类
const categories: Record<string, string[]> = {
  "肉禽": ["肉类", "猪肉", "鸡肉", "牛肉"],
  "鱼虾水产": ["鱼虾", "鱼", "虾"],
  "蔬菜": ["蔬菜", "芹菜", "白菜", "西兰花", "土豆", "青菜"],
  "豆制品": ["豆制品", "豆腐"],
  "蛋类": ["蛋类", "鸡蛋"],
  "主食 / 面粉": ["面粉"],
};

// 标签样式映射
const tagStyles: Record<string, string> = {
  "肉禽": "bg-red-500/15 text-red-400 border-red-500/30",
  "鱼虾水产": "bg-cyan-500/15 text-cyan-400 border-cyan-500/30",
  "蔬菜": "bg-green-500/15 text-green-400 border-green-500/30",
  "豆制品": "bg-amber-500/15 text-amber-400 border-amber-500/30",
  "蛋类": "bg-yellow-500/15 text-yellow-400 border-yellow-500/30",
  "主食 / 面粉": "bg-orange-500/15 text-orange-400 border-orange-500/30",
};
---

<BaseLayout title="食材筛选" description="按食材分类浏览所有原理和菜谱">
  <div class="mx-auto max-w-6xl px-6 py-12">
    <!-- Header -->
    <div class="mb-10">
      <div class="font-mono text-xs text-gray-600 mb-2">MOD_02</div>
      <h1 class="text-3xl font-bold text-gray-50 sm:text-4xl">
        食材筛选 <span class="text-brand-400">Variables</span>
      </h1>
      <p class="mt-3 text-lg text-gray-400">
        按食材分类浏览：找到某种食材的所有做法和背后的科学原理。
      </p>
    </div>

    <!-- Tag categories -->
    <div class="space-y-8">
      {Object.entries(categories).map(([catName, catTags]) => {
        const existingTags = catTags.filter((t) => tagCount.has(t));
        if (existingTags.length === 0) return null;
        const style = tagStyles[catName] ?? "bg-gray-800 text-gray-400 border-gray-700";
        return (
          <section>
            <h2 class="text-lg font-semibold text-gray-200 mb-4">
              <span class="font-mono text-brand-500">#</span> {catName}
            </h2>
            <div class="flex flex-wrap gap-3">
              {existingTags.map((tag) => (
                <a
                  href={`/tags/${encodeURIComponent(tag)}`}
                  class:list={[
                    "group flex items-center gap-2 rounded-lg border px-4 py-2.5 transition-all hover:scale-105",
                    style,
                  ]}
                >
                  <span class="text-sm font-medium">{tag}</span>
                  <span class="rounded-full bg-gray-800/50 px-2 py-0.5 text-xs font-mono text-gray-400 group-hover:text-gray-200">
                    {tagCount.get(tag)}
                  </span>
                </a>
              ))}
            </div>
          </section>
        );
      })}
    </div>

    <!-- All tags cloud -->
    <section class="mt-16 border-t border-gray-800 pt-10">
      <h2 class="text-lg font-semibold text-gray-200 mb-4">
        <span class="font-mono text-brand-500">#</span> 全部标签
      </h2>
      <div class="flex flex-wrap gap-2">
        {sortedTags.map(([tag, count]) => (
          <a
            href={`/tags/${encodeURIComponent(tag)}`}
            class="inline-flex items-center gap-1.5 rounded-full border border-gray-800 bg-gray-900/50 px-3 py-1.5 text-sm text-gray-400 transition-all hover:border-brand-500/50 hover:text-brand-400"
          >
            {tag}
            <span class="text-xs font-mono text-gray-600">{count}</span>
          </a>
        ))}
      </div>
    </section>
  </div>
</BaseLayout>
