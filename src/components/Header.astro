---
import SearchModal from "@/components/SearchModal";

const navItems = [
  { label: "首页", href: "/" },
  { label: "食材筛选", href: "/tags/" },
  { label: "烹饪方法", href: "/methods/" },
  { label: "菜谱库", href: "/recipes/" },
  { label: "原理层", href: "/kernel/" },
  { label: "调试区", href: "/debug/" },
  { label: "工具箱", href: "/tools/" },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 border-b border-gray-800 bg-gray-950/80 backdrop-blur-md">
  <nav class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
      <div class="flex h-9 w-9 items-center justify-center rounded-lg bg-brand-500/15 border border-brand-500/30 font-mono text-brand-400 text-sm font-bold group-hover:bg-brand-500/25 transition-colors">
        Sc
      </div>
      <div>
        <span class="text-lg font-bold text-gray-100">理科生下厨房</span>
        <span class="ml-2 hidden text-xs text-gray-500 font-mono sm:inline">SciCook</span>
      </div>
    </a>

    <!-- Desktop Nav -->
    <ul class="hidden items-center gap-1 md:flex">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              "rounded-md px-3 py-2 text-sm font-medium transition-colors",
              currentPath === item.href || (item.href !== "/" && currentPath.startsWith(item.href))
                ? "bg-brand-500/15 text-brand-400"
                : "text-gray-400 hover:bg-gray-800 hover:text-gray-200",
            ]}
          >
            {item.label}
          </a>
        </li>
      ))}
      <li>
        <button
          id="search-btn-desktop"
          class="ml-1 flex items-center gap-2 rounded-md px-3 py-2 text-sm text-gray-400 hover:bg-gray-800 hover:text-gray-200 transition-colors"
          aria-label="搜索"
        >
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
          </svg>
          <kbd class="hidden rounded border border-gray-700 bg-gray-800 px-1.5 py-0.5 font-mono text-[10px] text-gray-500 lg:inline">Ctrl K</kbd>
        </button>
      </li>
    </ul>

    <div class="flex items-center gap-1">
      <!-- Mobile Search Button -->
      <button
        id="search-btn-mobile"
        class="flex h-9 w-9 items-center justify-center rounded-md text-gray-400 hover:bg-gray-800 md:hidden"
        aria-label="搜索"
      >
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
        </svg>
      </button>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="flex h-9 w-9 items-center justify-center rounded-md text-gray-400 hover:bg-gray-800 md:hidden"
        aria-label="打开菜单"
      >
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Nav -->
  <div id="mobile-menu" class="hidden border-t border-gray-800 md:hidden">
    <ul class="space-y-1 px-4 py-3">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class:list={[
              "block rounded-md px-3 py-2 text-sm font-medium transition-colors",
              currentPath === item.href || (item.href !== "/" && currentPath.startsWith(item.href))
                ? "bg-brand-500/15 text-brand-400"
                : "text-gray-400 hover:bg-gray-800 hover:text-gray-200",
            ]}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<!-- Search Modal (React, client:load) -->
<SearchModal client:load />

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");
  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });

  // Search buttons trigger
  document.getElementById("search-btn-desktop")?.addEventListener("click", () => {
    (window as any).__openSearch?.();
  });
  document.getElementById("search-btn-mobile")?.addEventListener("click", () => {
    (window as any).__openSearch?.();
  });
</script>
